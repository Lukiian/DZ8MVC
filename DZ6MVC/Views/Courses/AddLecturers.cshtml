@model DZ6MVC.CourseLecturer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<form asp-action="AddLecturers">
    <div class="form-horizontal">
        <h4>Add Lecturer To Course</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.Hidden("courseId", ViewData["CourseId"])
        @Html.HiddenFor(m => Model.Id)
        <div class="form-group">
            <label class="col-md-5 control-label">@Model.Name</label>
        </div>
        <div class="form-group">
            <label class="col-md-5 control-label">@Model.StartDate</label>
        </div>
        <div class="form-group">
            <label class="col-md-5 control-label">@Model.EndDate</label>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Lecturer name</th>
                    <th>Assigned</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Lecturers.Count; i++)
                {
                    <tr>
                        <td>@Model.Lecturers[i].Name</td>
                        <td>
                            @Html.CheckBoxFor(m => Model.Lecturers[i].IsAssigned)
                        </td>
                        @Html.HiddenFor(m => Model.Lecturers[i].LecturerId)
                    </tr>
                }
            </tbody>
        </table>


        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </div>
</form>